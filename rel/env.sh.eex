#!/usr/bin/env sh

# Distributed defaults for Hivebeam release runtime
export HIVEBEAM_DISCOVERY_MODE="${HIVEBEAM_DISCOVERY_MODE:-hybrid}"
export HIVEBEAM_CLUSTER_RETRY_MS="${HIVEBEAM_CLUSTER_RETRY_MS:-5000}"

if [ -n "${HIVEBEAM_NODE_NAME:-}" ]; then
  export RELEASE_DISTRIBUTION="name"
  export RELEASE_NODE="${HIVEBEAM_NODE_NAME}"
  export RELEASE_COOKIE="${HIVEBEAM_COOKIE:-hivebeam_cookie}"
fi
